<section>
  <div>
    <div class="user-card">
    <div class="imgWrapper">
    <img src=<%= @user.photo%> alt="team">
    </div>
      <div class="user-info" >
        <h2><%= @user.name %></h2>
        <p>number of posts: <%= @user.posts.count%></p>
      </div>
    </div>
    <div class="user-card bioData ">
      <div>
      <h2>Bio: </h2>
        <p><%= @user.bio%></p>
      </div>
    </div>
    <div class="user-card eachPosts">
    <% @user.posts.each_with_index do |post, index| %>
        <a href="<%= user_post_path(@user, post) %>" class=">
          <div > 
            <h2 class="" >Post #<%= index + 1 %></h2>
            <p class=""><%= post.text %></p>
            <h2  ><%= post.title%></h2>
            <p class="">Comments: <%= post.comments.count %> Likes: <%= post.likes.count %> </p>
          </div>
        </a>
        <div class="">
          <% if post.comments.count >= 1 %> 
            <% post.top_comments.each do |comment| %>
              <% user = User.find(comment.user_id) %>
              <p class=""><%= user.name %>: <%= comment.text %></p>
            <% end %>
            <% else %>
              <p class="noComments">No comments yet.</p>
          <% end %>
        </div>
      <% end %>
    </div>

 
  </div>
</section>