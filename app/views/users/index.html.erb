<section>
  <div class="container">
    <div>
      <% @users.each do |user| %>
        <a href="<%= user_path(user) %>" class="p-2 lg:w-1/3 md:w-1/2 w-full">
          <div>
            <img src=<%= user.photo%> alt="team"  src="https://dummyimage.com/108x98">
            <div class="flex-grow">
              <h2><%= user.name %></h2>
              <p class="text-gray-500">number of posts: <%= user.posts.count%></p>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</section>

